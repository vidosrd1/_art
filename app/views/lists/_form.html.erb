<%= form_with(model: list, class: "contents") do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image,
    class: "block shadow rounded-md 1border 1border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 1w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :art %>
    <%= form.select :art_id,
    options_for_select(Art.all.map {
      |art| [art.name, art.id]
      }) %>
  </div>
  <div class="my-5">
    <%= form.label :body %>
    <%= form.rich_textarea :body, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-3 bg-blue-600
    dark:text-slate-800 text-white inline-block font-medium cursor-pointer"
    %>
  </div>
<% end %>
