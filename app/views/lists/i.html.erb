<br />
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Lists" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Lists</h1>
    <%= link_to "New list", new_list_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <% if @pagy.count > @pagy.items %>
    <div class="mt-10">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
  <div id="lists" class="min-w-full">
    <% @lists.each do |list| %>
      <%= render list %>
      <p>
        <%= link_to "Show this list", list, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
  <% if @pagy.count > @pagy.items %>
  <div class="mt-10">
    <%== pagy_nav(@pagy) %>
  </div>
  <br />
  <% end %>
  <br />
</div>
